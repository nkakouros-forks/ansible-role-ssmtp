mailhub={{ ssmtp_mailserver_host }}:{{ ssmtp_mailserver_port }}

{% if ssmtp_mailserver_root != false %}
Root={{ ssmtp_mailserver_root }}
{% endif %}
{% if ssmtp_mailserver_rewritedomain != false %}
RewriteDomain={{ ssmtp_mailserver_rewritedomain }}
{% endif %}
{% if ssmtp_mailserver_fromlineoverride != false %}
FromLineOverride={{ ssmtp_mailserver_fromlineoverride }}
{% endif %}
UseTLS=Yes
UseSTARTTLS=Yes
Hostname={{ ssmtp_mailserver_hostname }}
{% if ssmtp_auth == true %}
AuthUser={{ ssmtp_mailserver_username }}
AuthPass={{ ssmtp_mailserver_password }}
{% endif %}
